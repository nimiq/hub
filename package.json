{
    "name": "@nimiq/hub",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "pre": "yarn i18n:extract && if [ ! -f public/bitcoin/BitcoinJS.min.js ]; then yarn build:bitcoinjs; fi",
        "serve": "yarn pre && vue-cli-service serve",
        "build": "yarn pre && vue-cli-service build --modern App",
        "build:ci": "yarn pre && build=testnet vue-cli-service build",
        "build:bitcoinjs": "yarn --silent browserify bitcoinjs-parts.js -p common-shakeify -s BitcoinJS | yarn terser --compress --mangle --source-map --output public/bitcoin/BitcoinJS.min.js",
        "lint": "vue-cli-service lint --no-fix",
        "test:unit": "vue-cli-service test:unit",
        "test": "yarn test:unit",
        "pr": "yarn lint && yarn build:ci && yarn test && cd client && yarn lint && yarn build",
        "postinstall": "cd client && yarn",
        "i18n:extract": "node ./node_modules/webpack-i18n-tools/index.js ./src/i18n/en.po",
        "i18n:pull": "tx pull --all --parallel --no-interactive --force --minimum-perc 50",
        "i18n:push": "tx push --source",
        "i18n:sync": "yarn i18n:extract && yarn i18n:push ; yarn i18n:pull"
    },
    "dependencies": {
        "@nimiq/browser-warning": "^1.1.0",
        "@nimiq/electrum-client": "https://github.com/nimiq/electrum-client#build",
        "@nimiq/fastspot-api": "^1.4.0",
        "@nimiq/iqons": "^1.5.2",
        "@nimiq/keyguard-client": "^1.4.2-beta.0",
        "@nimiq/ledger-api": "^2.1.0",
        "@nimiq/network-client": "^0.6.2",
        "@nimiq/rpc": "^0.4.1",
        "@nimiq/style": "^0.8.2",
        "@nimiq/utils": "^0.5.0",
        "@nimiq/vue-components": "https://github.com/nimiq/vue-components#build/hub",
        "@sentry/browser": "^5.12.1",
        "@sentry/integrations": "^5.12.0",
        "big-integer": "^1.6.48",
        "vue": "^2.6.11",
        "vue-i18n": "^8.17.6",
        "vue-property-decorator": "^8.4.0",
        "vue-router": "^3.0.2",
        "vuex": "^3.1.2",
        "vuex-class": "^0.3.2"
    },
    "devDependencies": {
        "@babel/core": "^7.8.4",
        "@nimiq/core": "^1.5.8",
        "@nimiq/core-web": "^1.5.8",
        "@vue/babel-preset-app": "^3.4.1",
        "@vue/cli-plugin-typescript": "~4.2.2",
        "@vue/cli-plugin-unit-jest": "~4.2.2",
        "@vue/cli-plugin-vuex": "~4.2.2",
        "@vue/cli-service": "~4.2.2",
        "@vue/test-utils": "^1.0.0-beta.29",
        "babel-core": "7.0.0-bridge.0",
        "bitcoinjs-lib": "5.2.0",
        "browserify": "^16.5.0",
        "buffer": "5.6.0",
        "common-shakeify": "^0.6.2",
        "copy-webpack-plugin": "^4.5.2",
        "fake-indexeddb": "^2.0.5",
        "jest": "^24.1.0",
        "script-ext-html-webpack-plugin": "^2.1.4",
        "ts-jest": "^24.0.0",
        "typescript": "~3.8.0",
        "vue-template-compiler": "^2.6.11",
        "webpack-i18n-tools": "https://github.com/nimiq/webpack-i18n-tools#master",
        "write-file-webpack-plugin": "^4.5.1"
    }
}
